<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arabellaprivat.tanzderfunktionen.Menu">

    <TextView
        android:text="Levelauswahl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:id="@+id/u_levelauswahl"
        android:textSize="50sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/u_levelauswahl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="186dp">

        <Button
            android:text="Lineare Funktionen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="68dp"
            android:id="@+id/level_1"
            android:textSize="36sp"
            android:textAllCaps="false"
            android:layout_alignBottom="@+id/level_2"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Quadratische Funktionen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/level_2"
            android:layout_marginBottom="73dp"
            android:layout_alignBottom="@+id/level_3"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:textSize="36sp" />

        <Button
            android:text="Gebrochen-Rationale Funktionen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/level_3"
            android:layout_marginBottom="74dp"
            android:layout_alignBottom="@+id/level_5"
            android:layout_alignStart="@+id/level_2"
            android:textAllCaps="false"
            android:textSize="36sp" />

        <Button
            android:text="Trigonometrische Funktionen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/level_4"
            android:textSize="36sp"
            android:textAllCaps="false"
            android:layout_marginBottom="106dp"
            android:layout_above="@+id/level_2"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Logarithmus-Funkionen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/level_5"
            android:textSize="36sp"
            android:textAllCaps="false" />

    </LinearLayout>

</RelativeLayout>
